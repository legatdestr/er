<div class="em-row">
	<div class="ps-items">
		{{#each services}}
			<ul class="em-ul em-card-4 ps-content__item">
			  <li><strong>Услуга</strong>: {{this.service_name}}</li>
			  <li><strong>Цена</strong>: {{this.service_price}}</li>
			  <li><strong>Описание</strong>: {{this.service_desc.preview}}
			  {{#if this.service_desc.shorted}}
			  	<br><div class="em-button color-red em-text-white" data-desc={{this.service_desc.id}} onclick="EM.ps.showFullDesc(this);">Читать подробнее</div>
			  {{/if}}
			  </li>
			  <li><strong>Учреждение</strong>: {{this.lpu_name}}</li>
			  <li><strong>Рейтинг учреждения</strong>: {{this.lpu_ratio}}</li>
			  <li><strong class="em-block em-margin-bottom">Адреса:</strong>
					{{#each this.lpu_addresses}}
						<div class="em-leftbar em-padding em-margin-bottom">{{this.name}}: {{this.address}}</div>
					{{/each}}
			  </li>
			</ul>
		{{/each}}
	</div>
	<div id="pagination" class="em-center em-white"></div>
</div>
